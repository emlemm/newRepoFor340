<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="deleteForm" class="add-new-form" action="/inv/delete" method="post">
    <label for="inv_make">Vehicle Make:</label><br>
    <input class="form-input" type="text" name="inv_make" readonly autofocus required value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Vehicle Model:</label><br>
    <input class="form-input" type="text" name="inv_model" readonly required value="<%= locals.inv_model %>"><br>
    <label for="inv_year">Vehicle Year</label><br>
    <input class="form-input" type="number" name="inv_year" readonly required value="<%= locals.inv_year %>"><br>
    <label for="inv_price">Vehicle Price:</label><br>
    <input class="form-input" type="number" name="inv_price" readonly required value="<%= locals.inv_price %>"><br>
    <p>Confirm Deletion - The delete is permanent.</p>
    <input  class="submitBtn"  type="submit" name="submit" value="Delete vehicle from database">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>